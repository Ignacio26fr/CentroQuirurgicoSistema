<!DOCTYPE html>
<html lang="es" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" th:href="@{/css/estilos2.css}"



<body>
<title>Home</title>
<header th:attr="data-hover-text=${'Bienvenido al sitio web!'}">
    <h1 th:text="${headerText}" id="headerText">Registro institucional de actos quirurgicos</h1>

</header>

<main>
    <section>
        <div class="menu">
            <a href="@{/quirurgico/formulario}">
                <i class="fas fa-arrow-down fa-2x" ></i>
                <span>Registro De Cirugia</span>
            </a>

            <a th:href="@{/admin/listaDeCirugias}">
                <i class="fas fa-arrow-up fa-2x"></i>
                <span>Estadisticas</span>
            </a>

            <a href="">
                <i class="fas fa-box fa-2x"></i>
                <span>Opciones</span>
            </a>


        </div>


        <div>
            <button class="logout-button">
                <a href="@{/logout}" style="color: white; text-decoration: none;">Cerrar sesi√≥n</a>
            </button>
        </div>


        <div class="logo-container">

            <img src="/img/Logo_HCANK_violeta.png" alt="Logo HCANK" class="logo-image">
        </div>
    </section>
</main>
<script th:inline="javascript">
    document.addEventListener('DOMContentLoaded', function() {

        var header = document.querySelector('header');
        var headerTextElement = document.getElementById('headerText');
        var originalText = 'Registro institucional de actos quirurgicos';

        headerTextElement.innerText = originalText;


        header.addEventListener('mouseover', function() {
            headerTextElement.innerText = header.getAttribute('data-hover-text');
        });

        header.addEventListener('mouseout', function() {
            headerTextElement.innerText = originalText;
        });
    });
</script>
</body>
</html>